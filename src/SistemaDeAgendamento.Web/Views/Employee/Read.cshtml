@model SistemaDeAgendamento.Web.Models.Employee.ReadViewModel;

@{
    @if (User.IsInRole("Admin"))
    {
        ViewData["Title"] = "Funcuinários";
    }
    else
    {
        ViewData["Title"] = "Informações Pessoais";
    }
}


<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    @if (User.IsInRole("Admin"))
    {
        <h1 class="h3 fw-bold mb-0">
            <i class="bi bi-people text-primary me-2"></i>Funcionários
        </h1>
        <a class="btn btn-primary w-100 w-md-auto" asp-controller="Employee" asp-action="Create">
            <i class="bi bi-person-plus me-1"></i>Novo Funcionário
        </a>
    }
    else
    {
        <h1 class="h3 fw-bold mb-0">
            <i class="bi bi-person-circle text-primary me-2"></i>Informações Pessoais
        </h1>
    }
</div>


@if (Model.Employees == null || Model.Employees.Count == 0)
{
    <div class="empty-state">
        <i class="bi bi-people"></i>
        <h3 class="h5 mt-3 mb-2">Nenhum funcionário cadastrado</h3>
        <p class="text-muted mb-0">Comece adicionando seu primeiro funcionário.</p>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary mt-3" asp-controller="Employee" asp-action="Create">
                <i class="bi bi-person-plus me-1"></i>Adicionar Funcionário
            </a>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            @if (User.IsInRole("Admin"))
                            {
                                <th scope="col" class="ps-4">ID</th>
                            }
                            <th scope="col">Nome</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">
                                <abbr title="Nome para o funcionário fazer login" class="text-decoration-none">
                                    <i class="bi bi-person-badge me-1"></i>Username
                                </abbr>
                            </th>
                            <th scope="col">Email</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th scope="col" class="text-end pe-4">Ações</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="ps-4 text-muted">#@employee.Id</td>
                                }
                                <td class="fw-semibold">@employee.Name</td>
                                <td>
                                    <i class="bi bi-telephone text-muted me-1"></i>@employee.PhoneNumber
                                </td>
                                <td>
                                    <span class="badge bg-info-subtle text-info">
                                        <i class="bi bi-person-badge me-1"></i>@employee.UserName
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(employee.Email))
                                    {
                                        <i class="bi bi-envelope text-muted me-1"></i>
                                        @employee.Email
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="text-end pe-4">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Employee", new { id = employee.Id })">
                                            <i class="bi bi-pencil me-1"></i>Editar
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@if (User.IsInRole("Employee"))
{
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-clock-history me-2"></i>Horário de Trabalho
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Dia da Semana</th>
                            <th class="text-center">Horário de Início</th>
                            <th class="text-center">Horário de Saída</th>
                            <th class="text-center pe-3">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.EmployeeAvailability!.Count; i++)
                        {
                            <tr>
                                <td class="ps-3 fw-semibold">
                                    @Model.EmployeeAvailability[i].WeekDayDisplay
                                    <input type="hidden" asp-for="EmployeeAvailability[@i].WeekDay" />
                                </td>
                                <td class="text-center">
                                    <input asp-for="EmployeeAvailability[@i].StartTime"
                                           type="time" class="form-control form-control-sm text-center" disabled="disabled" />
                                </td>
                                <td class="text-center">
                                    <input asp-for="EmployeeAvailability[@i].EndTime"
                                           type="time" class="form-control form-control-sm text-center" disabled="disabled" />
                                </td>
                                <td class="text-center pe-3">
                                    @if (Model.EmployeeAvailability[i].IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const checkboxes = document.querySelectorAll("input[type='checkbox']");

            checkboxes.forEach(chk => {
                const row = chk.closest("tr");

                const updateRowColor = () => {
                    if (chk.checked) {
                        row.classList.remove("table-danger");
                        row.classList.add("table-success");
                    } else {
                        row.classList.remove("table-success");
                        row.classList.add("table-danger");
                    }
                };

                chk.addEventListener("change", updateRowColor);

                updateRowColor();
            });
        });
    </script>
}
