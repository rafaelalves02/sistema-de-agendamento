@model SistemaDeAgendamento.Web.Models.Service.EditViewModel;

@{
    ViewData["Title"] = "Editar Serviço";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a href="@Url.Action("Read", "Service")" class="btn btn-outline-secondary btn-sm me-2">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h1 class="h3 fw-bold mb-0">
                <i class="bi bi-pencil-square text-primary me-2"></i>Editar Serviço
            </h1>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form class="row g-4 needs-validation" asp-controller="Service" asp-action="Edit" id="serviceForm" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="col-12">
                        <label for="inputName" class="form-label fw-semibold">
                            <i class="bi bi-tag me-1 text-primary"></i>Nome do Serviço
                        </label>
                        <input type="text" class="form-control form-control-lg" id="inputName"
                               asp-for="Name" placeholder="Ex: Corte de Cabelo" required>
                        <div class="invalid-feedback">
                            Por favor, digite o nome do serviço.
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputPrice" class="form-label fw-semibold">
                            <i class="bi bi-currency-dollar me-1 text-success"></i>Preço
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-currency-dollar text-muted"></i>
                            </span>
                            <input type="text" id="preco" class="form-control"
                                   placeholder="R$ 0,00" asp-for="Price" required>
                        </div>
                        <div class="invalid-feedback">
                            Por favor, digite o preço do serviço.
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputDuration" class="form-label fw-semibold">
                            <i class="bi bi-clock me-1 text-info"></i>Duração (minutos)
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-clock text-muted"></i>
                            </span>
                            <input type="number" class="form-control" id="inputDuratio"
                                   asp-for="Duration" placeholder="Ex: 60" min="1" required>
                            <span class="input-group-text bg-light">min</span>
                        </div>
                        <div class="invalid-feedback">
                            Por favor, digite a duração em minutos.
                        </div>
                    </div>

                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                    <div class="col-12 pt-3 border-top">
                        <div class="d-flex gap-2 justify-content-between">
                            <button type="submit" class="btn btn-danger" formaction="@Url.Action("Delete", "Service")"
                                    onclick="return confirm('Tem certeza que deseja excluir este serviço? Esta ação não pode ser desfeita.');">
                                <i class="bi bi-trash me-1"></i>Excluir
                            </button>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-secondary" href="@Url.Action("Read", "Service")">
                                    <i class="bi bi-x-circle me-1"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>Salvar Alterações
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
         (() => {
          'use strict'

          const forms = document.querySelectorAll('.needs-validation')

          Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
              if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
              }

              form.classList.add('was-validated')
            }, false)
          })
        })()

        const inputPreco = document.getElementById('preco');
        const form = document.getElementById('serviceForm');

        inputPreco.addEventListener('input', e => {
          let value = e.target.value.replace(/\D/g, '');

          if (value === '') {
            e.target.value = '';
            return;
          }

          value = (parseInt(value, 10) / 100).toFixed(2);
          value = value
            .replace('.', ',')
            .replace(/\B(?=(\d{3})+(?!\d))/g, '.');

          e.target.value = 'R$ ' + value;
        });

        form.addEventListener('submit', e => {
          let rawValue = inputPreco.value
            .replace(/[^\d,]/g, '')
            .replace(/\./g, '');

          inputPreco.value = rawValue;
        });
    </script>
}